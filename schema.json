{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["$schema", "plugins"],
  "properties": {
    "$schema": {
      "const": "https://raw.githubusercontent.com/RetailCorrector/registry/refs/heads/main/schema.json"
    },
    "plugins":{
      "type": "array",
      "items": {
    	"type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
          	"type": "string"
          },
          "version": {
          	"type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "type": {
          	"enum": ["Fiscal", "Source", "Pack"]
          },
          "author": {
          	"type": "string"
          },
          "description": {
          	"type": "string"
          },
          "file": {
          	"type": "string",
            "pattern": "^http(s?):.*\\.dll$"
          }
        },
        "required":["id", "name", "version", "type", "author", "description", "file"]
      }
    }
  }
}
